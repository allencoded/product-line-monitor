{
  "name": "production-line-monitor",
  "version": "1.0.0",
  "description": "Manufacturing Intelligence Platform - Production Line Monitor POC",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "workers": "tsx src/workers/index.ts",
    "worker:sensor-data": "tsx src/workers/sensor-data.worker.ts",
    "worker:anomaly-detection": "tsx src/workers/anomaly-detection.worker.ts",
    "worker:data-aggregation": "tsx src/workers/data-aggregation.worker.ts",
    "worker:batch": "tsx src/workers/batch-sensor-data.worker.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:setup-timescale": "tsx src/db/setup-timescale.ts",
    "seed": "tsx src/db/seed.ts",
    "seed:sample": "tsx src/db/seed-sample-data.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "load-test": "tsx scripts/load-test.ts",
    "load-test:light": "tsx scripts/load-test.ts light",
    "load-test:medium": "tsx scripts/load-test.ts medium",
    "load-test:heavy": "tsx scripts/load-test.ts heavy",
    "load-test:burst": "tsx scripts/load-test.ts burst",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "manufacturing",
    "iot",
    "anomaly-detection",
    "timeseries"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "@types/pg": "^8.15.6",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.13.2",
    "bullmq": "^5.35.5",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "js-yaml": "^4.1.1",
    "pg": "^8.16.3",
    "redis": "^4.7.1",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.25",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.25",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.5.1",
    "prisma": "^7.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
